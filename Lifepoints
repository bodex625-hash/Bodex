<div class="form-container">
  <h2>أدخل كلمة المرور للوصول للرابط</h2>
  <form id="accessForm">
    <input type="password" id="password" placeholder="كلمة المرور" required>
    <br>
    <button type="submit">ادخل</button>
  </form>
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/crypto-js/4.1.1/crypto-js.min.js"></script>
<script>
  const key = CryptoJS.enc.Utf8.parse("BodexSuperKey123"); // مفتاح التشفير
  const encryptedPass = "U2FsdGVkX1+gT7ZqPxIYkiNKKs3khv6sE2c4SyJnCz8="; // كلمة المرور Bodex55510300 مشفرة
  const encryptedURL = "U2FsdGVkX19yrz1hJpv6OqMY0fvlJ5L5hJ5OoyzYFGM="; // الرابط النهائي مشفر

  let attempts = parseInt(localStorage.getItem("attempts")) || 0;
  let blockedUntil = parseInt(localStorage.getItem("blockedUntil")) || 0;

  document.getElementById('accessForm').addEventListener('submit', function(e) {
    e.preventDefault();

    const now = Date.now();
    if(blockedUntil && now < blockedUntil){
      const remaining = Math.ceil((blockedUntil - now)/1000);
      alert(`تم حظر الدخول مؤقتًا. حاول مرة أخرى بعد ${remaining} ثانية.`);
      return;
    }

    const input = document.getElementById('password').value;
    const decryptedPass = CryptoJS.AES.decrypt(encryptedPass, key).toString(CryptoJS.enc.Utf8);

    if(input === decryptedPass){
      const decryptedURL = CryptoJS.AES.decrypt(encryptedURL, key).toString(CryptoJS.enc.Utf8);
      window.location.href = decryptedURL;
    } else {
      attempts++;
      localStorage.setItem("attempts", attempts);
      if(attempts >= 3){
        blockedUntil = Date.now() + 5*60*1000; // 5 دقائق
        localStorage.setItem("blockedUntil", blockedUntil);
        alert("لقد تجاوزت الحد المسموح من المحاولات. تم حظر الدخول لمدة 5 دقائق.");
      } else {
        alert(`كلمة المرور خاطئة! لديك ${3 - attempts} محاولات متبقية.`);
      }
    }
  });
</script>

</body>
</html>
